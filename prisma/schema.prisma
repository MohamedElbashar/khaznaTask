// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
   id Int @id @default(autoincrement())
   username String  @unique
   password  String
   allowed_balance Int
}
model Product{
  id Int @id @default(autoincrement())
  name String
  price Int
  brand Brand
  category Category
}
model Brand{
   id Int @id @default(autoincrement())
   name String
}
model Category{
  id Int @id @default(autoincrement())
  name String
}